<h1>Users List</h1>
<table>
  <tr>
    <th><%= link_to "Non Black User", :sort => "non_black"%> </th>
    <th><%= link_to "Black User", :sort => "black"%> </th>
    <th><%= link_to "All User", :sort => "all"%> </th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= render user %>
        <%= link_to "Edit this user", edit_user_path(user) %>
      </td>
    </tr>

  <% end %>
</table>

