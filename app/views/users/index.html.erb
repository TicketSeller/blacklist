<p style="color: green"><%= notice %></p>

<%= link_to "BlackList", black_list_path %>

<%= form_with url: import_users_path, method: :post do |form| %>
  <%= form.file_field :file, accept: ".csv" %>
  <%= form.button "Import" %>
<% end %>

<h1>Users List</h1>
<table>
  <tr>
    <th><%= link_to "Non Black User", :sort => "non_black"%> </th>
    <th><%= link_to "Black User", :sort => "black"%> </th>
    <th><%= link_to "All User", :sort => "all"%> </th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= render user %>
        <%= link_to "Edit this user", edit_user_path(user) %>
      </td>
    </tr>

  <% end %>
</table>

<%= link_to "New user", new_user_path %>
